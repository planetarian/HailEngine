<Window x:Class="GraupelTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraupelTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="300">
    <Grid>
        <TextBox x:Name="FilenameTextBox" Height="23" Margin="10,34,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
        <Button x:Name="BrowseButton" Content="Browse" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="BrowseButton_Click"/>
        <TabControl x:Name="ResultTabs" Margin="0,62,0,-0.2">
            <TabItem Header="List">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="GraupelTextBox" Margin="0" AcceptsReturn="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Tree">
                <Grid Background="#FFE5E5E5">
                    <TreeView x:Name="GraupelTreeView" Margin="0"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
